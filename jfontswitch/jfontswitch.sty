\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{jfontswitch}[12/08/05 v1.1]

\RequirePackage{fontspec}
\RequirePackage{xeCJK}
\RequirePackage[protrusion=true]{microtype}
\RequirePackage{libertineotf}

% serif
\newfontfamily\libertine[Ligatures={Common,Discretionary},Numbers={OldStyle},Kerning={On}]{Linux Libertine O}
\newfontfamily\minion[Ligatures={Common},Numbers={Proportional,OldStyle}, Kerning={On}]{Minion Pro}}
\newfontfamily\miniondlig[Ligatures={Common,Discretionary},Numbers={Proportional,OldStyle}]{Minion Pro}}
\newfontfamily\garamond[igatures={Common,Discretionary},Numbers={OldStyle},Kerning={On}]{Adobe Garamond Pro}}
\newfontfamily\caslon[Ligatures={Common,Discretionary},Numbers={Proportional,OldStyle},Kerning={On}]{Adobe Caslon Pro}}
\newfontfamily\chaparral[Ligatures={Common},Numbers={Proportional,OldStyle},Kerning={On}]{Chaparral Pro}}

% sans serif
\newfontfamily\myriad[Ligatures={Common},Numbers={Proportional,OldStyle},Kerning={On}]{Myriad Pro}}

% cjk
\newfontfamily\kozuka[Ligatures={Common,Discretionary},Kerning={Off}, CharacterWidth={Full},CJKShape={Expert}]{Kozuka Mincho Pro}}
\setCJKmainfont{\kozuka}

\DeclareOption{cjk}{%
    \typeout{cjk option}
\DeclareOption{libertine}{%
    \typeout{libertine option}
    \PassOptionsToPackage{%
        libertine={Ligatures=TeX,RawFeature=+delig,Numbers=OldStyle}}{libertineotf}}

\DeclareOption{garamond}{%
    \typeout{garamond option}
    \setmainfont[%
        Ligatures={Common,Discretionary},%
        Numbers={OldStyle},%
        Kerning={On}]{Adobe Garamond Pro}}

\DeclareOption{minion}{%
    \typeout{minion option}
    \setmainfont[%
        Ligatures={Common},
        Numbers={Proportional,OldStyle},%
        Kerning={On}]{Minion Pro}}

\DeclareOption{miniond}{%
    \typeout{minion with dlig option}
    \setmainfont[%
        Ligatures={Common,Discretionary},%
        Numbers={Proportional,OldStyle}]{Minion Pro}}

\DeclareOption{myriad}{%
    \typeout{myriad pro}
    \setmainfont[%
        Ligatures={Common},%
        Numbers={Proportional,OldStyle},%
        Kerning={On}]{Myriad Pro}}

\DeclareOption{chaparral}{%
    \typeout{chaperral pro}
    \setmainfont[%
        Ligatures={Common},%
        Numbers={Proportional,OldStyle},%
        Kerning={On}]{Chaparral Pro}}

\DeclareOption{caslon}{%
    \typeout{adobe caslon pro}
    \setmainfont[%
        Ligatures={Common,Discretionary},%
        Numbers={Proportional,OldStyle},%
        Kerning={On}]{Adobe Caslon Pro}}

\DeclareOption{source}{%
    \setmainfont[%
        Ligatures={Common},%
        Numbers={Proportional,OldStyle},%
        Kerning={On}]{Source Sans Pro}}

\ProcessOptions\relax
